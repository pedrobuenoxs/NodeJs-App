    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Nova postagem</h3>
<div class="card">
    <div class="card-body">
    <form action="/admin/categorias/nova" method="POST">
     <label for="nome">Título:</label>
     <input type="text" id="nome" name="nome" placeholder="Dê um titulo chamativo" class="form-control mt-2">
     <label class="mt-2" for="slug">Conteúdo:</label>
     <input type="text" id="slug" name="slug" placeholder="Escreva sua história" class="form-control mt-2">
     <button type="submit" class="btn btn-success mt-4">Criar post</button>
    </form>
    </div>
</div>