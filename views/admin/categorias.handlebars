<h2>Postagens</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Criar postagem</button></a>

{{#each categorias}}
    <div class ="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small><br><hr>
            <small>Data de criação: {{date}}</small><br>
            
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" style="float: right;" class="btn btn-danger mt-4">Deletar</button>

            </form>      
            <a href="/admin/categorias/edit/{{_id}}"><button style="float: right;"  class ="btn btn-success mt-4 ">Editar</button></a>      
        </div>
        
    </div>

{{else}}
<h4 class="mt-3">Nenhum cadastro</h4>

{{/each}}